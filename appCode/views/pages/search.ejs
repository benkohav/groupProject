<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<body>
<main>
  <div class="col"><%- include ('../partials/message') %></div>
  <div class = "container">
    <h1>Search</h1>
    <form action="/search" method="POST">
      <label for="search" class="form-label"  >Search</label>
      <input type="text" class="form-control" id="search" name ="search">
      <button id="submit_button" class="btn btn-secondary" type="submit">Search</button>
    </form>
            <% 
            if (query){
              var question = '<p>Showing Results For: ' + query + '</p>';
            %>
            <%- question %>
              <% } %>
            <%
            if (results) {
                var tab = '';
                tab += '<table> <thead> <tr> <th width = 100> ItemID </th> <th width = 100> Category </th> <th width = 100> SubCategory </th> <th width = 200> Image </th> <th> Add to Cart </th> </tr> <br> </thead> <tbody>'
                results.forEach(function(item){
                  tab+= '<tr>';
                  tab+= '<td>' + item.itemid + '</td>';
                  tab+= '<td>' + item.catname + '</td>';
                  tab+= '<td>' + item.subcatname + '</td>';
                  tab+= '<td>' + '<img src = "' + item.url + '" alt = "No Image" height = 150 width = 200>' + '</td>';
                  tab+= '<td><a href = "' + item.url + '">Book Now</a></td>';
                  tab+= '</tr>';
                }); 
                tab += '</tbody></table>';
                %>
               <%- tab %>
              <% } %>
  </div>
</main>

<%- include ('../partials/footer') %>/